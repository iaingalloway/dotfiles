# ~/.config/starship.toml

'$schema' = 'https://starship.rs/config-schema.json'

add_newline = true

format = """\
[ÓÇ∂](fg:{{ .colours.accentFourBright }})\
$os\
$hostname\
[ÓÇ∞](bg:{{ .colours.accentOne }} fg:{{ .colours.accentFourBright }})\
$directory\
[ÓÇ∞](bg:{{ .colours.accentTwo }} fg:{{ .colours.accentOne }})\
$git_branch\
$git_commit\
$git_state\
$git_metrics\
$git_status\
[ÓÇ∞](bg:{{ .colours.accentThree }} fg:{{ .colours.accentTwo }})\
$kubernetes\
[ÓÇ∞](fg:{{ .colours.accentThree }})
$jobs\
$sudo\
$character"""

[character]
success_symbol = '[ÔÅî]({{ .colours.bodySuccess }})'
error_symbol = '[ÔÅî]({{ .colours.bodyError }})'

[directory]
format = '[ $path ]($style)'
home_symbol = 'Ôì¢'
style = 'bg:{{ .colours.accentOne }} fg:{{ .colours.accentOneForeground }}'
truncate_to_repo = true
truncation_symbol = '‚Ä¶/'

[git_branch]
format = '[ $branch]($style)'
symbol = ''
style = 'bg:{{ .colours.accentTwo }} fg:{{ .colours.accentTwoForeground }}'
truncation_length = 20
truncation_symbol = '‚Ä¶/'

[git_commit]
format = '[ $tag]($style)'
tag_symbol = ''
style = 'bg:{{ .colours.accentTwo }} fg:{{ .colours.accentTwoForeground }}'
tag_disabled = false
commit_hash_length = 4

[git_metrics]
format = '[+$added]($added_style)/[-$deleted]($deleted_style) '
added_style = 'bold blue'

[git_state]
format = '[ $state($progress_current of $progress_total)]($style)'
style = 'bg:{{ .colours.accentTwo }} fg:{{ .colours.accentTwoForeground }}'
cherry_pick = 'üçí'

[git_status]
format = '[( $up_to_date$conflicted$untracked$modified$renamed$deleted$stashed$ahead_behind$staged) ]($style)'
style = 'bg:{{ .colours.accentTwo }} fg:{{ .colours.accentTwoForeground }}'
conflicted = '[üè≥](bg:{{ .colours.accentTwo }} fg:{{ .colours.accentTwoError }})'
up_to_date = '[ÓÆ¥](bg:{{ .colours.accentTwo }} fg:{{ .colours.accentTwoSuccess }})'
untracked = '[Ôî©](bg:{{ .colours.accentTwo }} fg:{{ .colours.accentTwoError }})'
ahead = '[Ó™°${count}](bg:{{ .colours.accentTwo }} fg:{{ .colours.accentTwoForeground }})'
diverged = '[Ó™°${ahead_count}Ó™ö${behind_count}](bg:{{ .colours.accentTwo }} fg:{{ .colours.accentTwoForeground }})'
behind = '[Ó™ö${count}](bg:{{ .colours.accentTwo }} fg:{{ .colours.accentTwoForeground }})'
stashed = '[Ôíá](bg:{{ .colours.accentTwo }} fg:{{ .colours.accentTwoForeground }})'
modified = '[ÓÆ¥](bg:{{ .colours.accentTwo }} fg:{{ .colours.accentTwoError }})'
staged = '[+$count](bg:{{ .colours.accentTwo }} fg:{{ .colours.accentTwoForeground }})'
renamed = '[Ó´†](bg:{{ .colours.accentTwo }} fg:{{ .colours.accentTwoError }})'
deleted = '[ÔÄî](bg:{{ .colours.accentTwo }} fg:{{ .colours.accentTwoError }})'

[hostname]
format = '[$hostname ]($style)'
style = 'bg:{{ .colours.accentFourBright }}'

[jobs]
format = '[$symbol]($style)'
symbol = '|'
style = '{{ .colours.accentThree }}'

[kubernetes]
disabled = false
format = '[ $symbol$context( \($namespace\)) ]($style)'
symbol = '‚éà'
style = 'bg:{{ .colours.accentThree }} fg:{{ .colours.accentThreeForeground }}'

[[kubernetes.contexts]]
context_pattern = 'gke.*_(?P<var_cluster>[\w-]+)'
context_alias = 'gke-$var_cluster'

[[kubernetes.contexts]]
context_pattern = 'kind-(?P<var_cluster>[\w-]+)'
context_alias = '$var_cluster'

[os]
disabled = false
format = '[$symbol ]($style)'
style = 'bg:{{ .colours.accentFourBright }} fg:{{ .colours.accentFourForeground }}'

[os.symbols]
Ubuntu = 'Óú∫'
Windows  = 'Óúè'
